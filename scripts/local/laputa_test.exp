#!/usr/bin/expect -f
source [file join [file dirname $argv0] ./laputa_test_main.tcl]
source [file join [file dirname $argv0] ./laputa_test_main_multi_vcpu.tcl]
source [file join [file dirname $argv0] ./laputa_test_main_multi_vm.tcl]

set timeout 180

# set args_for_laputa_test [lindex $argv 0];

spawn bash -c "killall qemu-system-riscv64"

spawn bash -c "screen -r virt"

send "./scripts/local/boot.sh \n"

expect {
    "Please press Enter to activate this console" {
        send "\n ./chroot.sh \n
        mount -t proc proc /proc \n
        mount -t sysfs sysfs /sys \n
        mount -t devtmpfs devtmpfs /dev \n"
  #      echo 5 > /proc/sys/kernel/printk \n"
        exp_continue
    }

    "root@(none)" {
        send "cd laputa && ./run_tests.sh $argv\n"
        expect {
            "test failed" {
                exit -1
            }
            "ALL TEST PASSED" {
        
            }
            timeout {
                exit -1
            }
        }
    }
    timeout {
        exit -1
    }
}

main_test

main_test_multi_vcpu

main_test_multi_vm

send "\x01"; send "d"

spawn bash  -c "screen -r host"

main_test_multi_vm_host

